{% extends 'base.html.twig' %}

{% block title %}Connexion - Le Bateau Livre{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mt-3 mb-3 font-weight-normal">Connexion :</h1>
            <label for="inputMail font-regular">Email :</label>
            <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>
            <label for="inputPassword font-regular pt-3">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="d-flex justify-content-center">
            <button class="mt-3 btn-brown mx-auto font-regular" type="submit">
                Se connecter
            </button>
            </div>
        </form>
        <div class="pt-4 d-flex flex-column align-items-center justify-content-center">
        <h3 class="font-regular">Pas de compte ?</h3>
            <p class="font-regular"><a href="{{ path('app_register') }}" class="">Se cr√©er un compte</a></p>
        </div>


    </div>
{% endblock %}
