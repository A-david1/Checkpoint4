{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="h3 mt-3 mb-3 font-weight-normal">Register</h1>
        <div class="container">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="d-flex justify-content-center">
        <button type="submit" class="mt-3 btn-brown mx-auto font-regular">Register</button>
            </div>
    {{ form_end(registrationForm) }}
        </div>
        <div class="pt-4 d-flex flex-column align-items-center justify-content-center">
            <h3 class="font-regular">Déjà un compte ?</h3>
            <p class="font-regular"><a href="{{ path('app_login') }}" class="">Se connecter</a></p>
        </div>
    </div>
{% endblock %}
