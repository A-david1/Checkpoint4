{% extends 'base.html.twig' %}

{% block title %}Mes Lectures - Bateau Livre{% endblock %}

{% block body %}
<div class="container pt-4">
    <h1 class="mt-4 mb-3 font-regular">Mes lectures</h1>

    <div class="mt-4 d-flex flex-nowrap">
        <a class='link-card' href="{{ path('add_reading') }}"><i class="pr-2 fas fa-plus fa-lg"></i>Ajouter une lecture</a>
    </div>

    <h2 class="mt-4 pt-3 font-regular">Lectures du Moment</h2>

    <div class=" pt-3 container d-flex flex-wrap">
    {% for book in readingBooks %}
        <div class="card-book mb-3 mr-3" style="width: 22rem;">
            <div class="m-3 d-flex flex-column">
                <div class="d-flex flex-nowrap justify-content-between">
                    <h5 class="font-regular">{{ book.getBook().title }}</h5>
                    <a href="{{ path('edit_reading', { id_book: book.getBook().id, id_readingStatus: book.id}) }}">
                        <i class="fas fa-book fa-lg color-fourth"></i></a>
                </div>
                <h6 class="font-regular">{{ book.getBook().author }}</h6>
                <div class="d- flex-row flex-wrap">
                    <span class=" p-2 mb-2 badge badge-pill badge-success font-regular">En cours</span>
                    <span class="ml-2 font-regular ">Commencé le {{ book.startedAt|date('d/m/Y') }}</span>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

        <h2 class="mt-3 pt-3 font-regular">Futures Lectures</h2>
        <div class=" pt-3 pb-3 container d-flex flex-wrap">
        {% for book in futureBooks %}
            <div class="card-book mb-3" style="width: 22rem;">
                <div class="m-3 mr-3 d-flex flex-column">
                    <div class="d-flex flex-nowrap justify-content-between">
                    <h5 class="font-regular">{{ book.getBook().title }}</h5>
                        <a href="{{ path('edit_reading', { id_book: book.getBook().id, id_readingStatus: book.id}) }}">
                            <i class="fas fa-book fa-lg color-fourth"></i></a>
                    </div>
                    <h6 class="font-regular">{{ book.getBook().author }}</h6>
                    <div class="d- flex-row flex-wrap">
                        <span class=" p-2 badge badge-pill badge-secondary font-regular">A lire</span>
                        <span class=" mb-2 ml-2 font-regular">Ajouté le {{ book.addedAt|date('d/m/Y') }}</span>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>

</div>


{% endblock %}